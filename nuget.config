<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Feed hosting pre-release / CI builds (used only for Nerdbank.GitVersioning via mapping below) -->
    <!-- <add key="PublicCI" value="https://pkgs.dev.azure.com/andrewarnott/OSS/_packaging/PublicCI/nuget/v3/index.json" /> -->
    <add key="LocalPackages" value=".\packages" />
    <!-- Official public NuGet feed -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>

  <!-- Package source mapping enforces which packages can restore from which source.
       Only Nerdbank.GitVersioning comes from PublicCI; everything else defaults to nuget.org. -->
  <packageSourceMapping>
    <packageSource key="PublicCI">
      <package pattern="Nerdbank.GitVersioning" />
    </packageSource>
    <packageSource key="nuget.org">
      <!-- Explicitly allow everything else -->
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>